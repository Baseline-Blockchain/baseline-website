source "https://rubygems.org"

# Ruby 2.6 legacy support
# Jekyll 3.9 is the last series to support older Rubies well (GitHub Pages uses it)
gem "jekyll", "~> 3.9.0"

# Fix for kramdown GFM parser
gem "kramdown-parser-gfm"

# Webrick is needed for headers in some environments
gem "webrick", "~> 1.7"

# CRITICAL: Lock ffi to a version that supports Ruby 2.6
# ffi 1.17+ requires Ruby 3.0+
gem "ffi", "~> 1.15.5"

# Other potential legacy locks if needed:
# gem "sassc", "~> 2.4.0"
